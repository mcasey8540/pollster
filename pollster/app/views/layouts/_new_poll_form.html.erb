<%= form_for @poll do |f| %>
  <form class="form-horizontal">
    <div class="control-group">
      <div class="controls">
        <%= f.text_field :name, placeholder: "Name of Poll", class: "input-xxlarge" %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit class: "btn btn-danger" %>
      </div>
    </div>
  </form>
<% end %>